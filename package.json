{
  "name": "@sudaraka/bonta",
  "version": "1.0.1",
  "description": "Freedesktop notifications that reminds me to take a zip of water at a preconfigured interval.",
  "main": "lib/app.js",
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "bonta": "bin/main"
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "exit 0;"
  },
  "eslintConfig": {
    "extends": "@sudaraka/default",
    "env": {
      "node": true,
      "es6": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudaraka/bonta.git"
  },
  "keywords": [
    "desktop-notification",
    "reminder"
  ],
  "author": "Sudaraka Wijesinghe <sudaraka@sudaraka.org> (http://sudaraka.org/)",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/sudaraka/bonta/issues"
  },
  "homepage": "https://github.com/sudaraka/bonta#readme",
  "devDependencies": {
    "@sudaraka/eslint-config-default": "^0.2.1",
    "eslint": "1.10.3"
  },
  "dependencies": {
    "growl": "1.8.1"
  }
}
